{
  "model": {
    "vocab_size": 16384,
    "hidden_size": 384,
    "num_layers": 6,
    "num_heads": 6,
    "max_position_embeddings": 512,
    "dropout": 0.1,
    "attention_dropout": 0.1,
    "layer_norm_eps": 1e-5,
    "initializer_range": 0.02,
    "use_cache": true
  },
  
  "tokenizer": {
    "bos_token_id": 0,
    "eos_token_id": 1,
    "unk_token_id": 2,
    "pad_token_id": 3
  },
  
  "training": {
    "batch_size": 32,
    "gradient_accumulation_steps": 8,
    "learning_rate": 0.001,
    "min_learning_rate": 0.00001,
    "warmup_steps": 1000,
    "num_epochs": 1,
    "weight_decay": 0.1,
    "max_grad_norm": 1.0
  },
  
  "logging": {
    "eval_steps": 500,
    "save_steps": 1000,
    "logging_steps": 10
  },
  
  "paths": {
    "checkpoint_dir": "checkpoints",
    "log_dir": "logs",
    "tokenizer_dir": "tokenizers/full_tokenizer",
    "dataset_dir": "/home/andrea/Desktop/data/tokenized_datasets/full_dataset"
  }
}